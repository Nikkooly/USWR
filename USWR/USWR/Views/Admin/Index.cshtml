@model IEnumerable<USWR.Models.Sites>
@{
    ViewBag.Title = "Admin Panel";
    //Layout = null;

}

<!DOCTYPE html>

<html>
<head>
    <title>Useful web-sites references</title>
</head>
<body>
    <div align="right">
        <a asp-action="Create">Добавить сайт</a> |
        <a asp-action="Comments">Просмотреть комментарии</a> |
        <a asp-action="Users" asp-controller="Admin">Список пользователей</a> |
        <a href="http://localhost:52439/">Выход</a>
    </div>
    <div>
        <form asp-controller="Admin" asp-action="IndexFind">
            <p>
                Title: <input type="text" name="KeyWords">
                <input type="submit" value="Filter" />
            </p>
        </form>
    </div>
    <table class="table">
        <tr>
            <td>Заголовок</td>
            <td>Ссылка</td>
            <td>Ключевые слова</td>
            <td>Описание</td>
        </tr>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Header</td>
                <td><a href="@item.Link">Ссылка на сайт</a></td>
                <td>@item.Keywords</td>
                <td>@item.Description</td>
                <td>
                    <a asp-action="Edit" asp-controller="Admin" asp-route-id="@item.Id">Изменить</a> |
                    <a asp-action="Delete" asp-controller="Admin" asp-route-id="@item.Id">Удалить</a>
                </td>
            </tr>

        }
    </table>
</body>
</html>
