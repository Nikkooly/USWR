@model USWR.Models.Comments
@{
    ViewBag.Title = "Редактирование коментария";
}
    <form asp-action="editcomment" asp-controller="admin" asp-route-id="@Model.Id">
        <div class="form-group">
            <label asp-for="Comment" class="control-label">Комментарий</label>
            <input type="text" asp-for="Comment" class="form-control" required/>
        </div>
        <div class="form-group">
            <input type="submit" value="Сохранить" class="btn btn-default" />
        </div>
        <div class="form-group" hidden="true">
            <label asp-for="UserId"  class="control-label">Комментарий</label>
            <input type="text" asp-for="UserId" class="form-control" />
        </div>
        <div class="form-group" hidden="true">
            <label asp-for="SiteId" class="control-label">Комментарий</label>
            <input type="text" asp-for="SiteId" class="form-control" />
        </div>
    </form>