@model USWR.Models.CustomComments
@{
    ViewBag.Title = "Удаление комментария";
}

<div>
    <dl class="dl-horizontal">
        <dt>Логин</dt>
        <dd>
            @Html.DisplayFor(model => model.Login)
        </dd>

        <dt>Заголовок сайта</dt>
        <dd>
            @Html.DisplayFor(model => model.Header)
        </dd>

        <dt>Ссылка</dt>
        <dd>
            @Html.DisplayFor(model => model.Link)
        </dd>

        <dt>Комментарий</dt>
        <dd>
            @Html.DisplayFor(model => model.Comment)
        </dd>
    </dl>

    <div>
        <form asp-controller="Admin" asp-action="DeleteComment" method="post">
            <div class="form-group">
                <input type="submit" class="btn btn-default" value="Удалить" />
            </div>
        </form>
    </div>
</div>
