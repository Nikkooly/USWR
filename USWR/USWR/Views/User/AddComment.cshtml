@model USWR.Models.Sites
@{
    ViewBag.Title = "Добавление комментария";
}
<form asp-action="addcomment" asp-controller="user" asp-route-id="@Model.Id">
    <div class="form-group">
        <label asp-for="Description" class="control-label">Коментарий</label>
        <input type="text" asp-for="Description" value="" class="form-control" required />
    </div>
    <div class="form-group">
        <input type="submit" value="Добавить" class="btn btn-default" />
    </div>
</form>